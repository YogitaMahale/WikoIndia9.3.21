@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Log in";
}
<html lang="en" dir="ltr">
<head>
    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Bizdire - HTML & CSS dashboard design premium directory bootstrap admin template">
    <meta name="author" content="Spruko Technologies Private Limited">
    <meta name="keywords" content="admin dashboard template bootstrap,admin panel template bootstrap 4,bootstrap 4 admin dashboard,bootstrap 4 admin template,bootstrap admin panel template,bootstrap admin template premium,bootstrap admin template responsive,bootstrap admin ui,bootstrap application template,dashboard css,dashboard css framework,dashboard css template,dashboard design template,dashboard graphs,dashboard html,dashboard html bootstrap,dashboard html css,dashboard html5,dashboard layout,dashboard template bootstrap 4,dashboard template html5,dashboard ui,dashboard ui templates,dashboard website,dashboard website template,business listing sites,top business listing sites,local business listing sites,local business directory">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

    <!-- Title -->
    <title>Wiko India</title>

    <!-- Bootstrap Css -->
    <link href="~/Bizdire/LTR/assets/plugins/bootstrap-4.4.1-dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Sidemenu Css -->
    <link href="~/Bizdire/LTR/assets/css/sidemenu.css" rel="stylesheet" />

    <!-- Dashboard css -->
    <link href="~/Bizdire/LTR/assets/css/style.css" rel="stylesheet" />
    <link href="~/Bizdire/LTR/assets/css/admin-custom.css" rel="stylesheet" />

    <!-- c3.js Charts Plugin -->
    <link href="~/Bizdire/LTR/assets/plugins/charts-c3/c3-chart.css" rel="stylesheet" />

    <!---Font icons-->
    <link href="~/Bizdire/LTR/assets/css/icons.css" rel="stylesheet" />

    <!-- Color Skins -->
    <link id="theme" href="~/Bizdire/LTR/assets/color-skins/color1.css" rel="stylesheet" />

</head>
<body class="construction-image">

    <!--Loader-->
    <div id="global-loader">
        <img src="~/Bizdire/LTR/assets/images/products/products/loader.png" class="loader-img floating" alt="">
    </div>

    <!--Page-->
    <div class="page h-100">
        <div class="page-content z-index-10">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-md-12 col-md-12 d-block mx-auto">
                        <div class="card mb-0 shadow-none">
                            <div class="card-header">
                                <h3 class="card-title">Login to your Account</h3>
                            </div>
                            <div class="card-body">
                                <form id="account" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="form-label text-dark" asp-for="Input.Email"></label>
                                        <input type="text" class="form-control" asp-for="Input.Email" placeholder="Enter Mobile no">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label text-dark" asp-for="Input.Password"></label>
                                        <input type="password" asp-for="Input.Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                                    </div>
                                    <div class="form-group">



                                        <label class="custom-control custom-checkbox">





                                            <a id="forgot-password" asp-page="./ForgotPassword" class="float-right small text-dark mt-1">Forgot your password?</a>

                                            @*<input type="checkbox" class="custom-control-input">*@
                                            <span>

                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </span>
                                        </label>
                                    </div>
                                    <div class="form-footer mt-2">
                                        <button type="submit" class="btn btn-primary btn-block">Log in</button>

                                    </div>
                                    <div class="text-center  mt-3 text-dark">
                                        Don't have account yet?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="float-right small text-dark mt-1">SignUp</a>


                                    </div>






                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard js -->
    <script src="~/Bizdire/LTR/assets/js/vendors/jquery-3.2.1.min.js"></script>
    <script src="~/Bizdire/LTR/assets/plugins/bootstrap-4.4.1-dist/js/popper.min.js"></script>
    <script src="~/Bizdire/LTR/assets/plugins/bootstrap-4.4.1-dist/js/bootstrap.min.js"></script>
    <script src="~/Bizdire/LTR/assets/js/vendors/jquery.sparkline.min.js"></script>
    <script src="~/Bizdire/LTR/assets/js/vendors/selectize.min.js"></script>
    <script src="~/Bizdire/LTR/assets/js/vendors/jquery.tablesorter.min.js"></script>
    <script src="~/Bizdire/LTR/assets/js/vendors/circle-progress.min.js"></script>
    <script src="~/Bizdire/LTR/assets/plugins/rating/jquery.rating-stars.js"></script>

    <!-- Perfect scroll bar Js-->
    <script src="~/Bizdire/LTR/assets/plugins/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Bizdire/LTR/assets/plugins/perfect-scrollbar/p-scroll.js"></script>

    <!-- Fullside-menu Js-->
    <script src="~/Bizdire/LTR/assets/plugins/toggle-sidebar/sidemenu.js"></script>

    <!--Counters -->
    <script src="~/Bizdire/LTR/assets/plugins/counters/counterup.min.js"></script>
    <script src="~/Bizdire/LTR/assets/plugins/counters/waypoints.min.js"></script>

    <!-- Custom Js-->
    <script src="~/Bizdire/LTR/assets/js/admin-custom.js"></script>

</body>
</html>


